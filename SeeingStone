import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Hafeeza Ali
 * SeeingStone in puzzle2
 */
public class SeeingStone extends Actor
{
    /**
     * Act - do whatever the SeeingStone wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void act()
    {
        
       if (Greenfoot.mousePressed (this)){
          getWorld().removeObject(this);
          puzzle2.score = puzzle2.score + 1;
       }
    }
}
